      "type": "S3",
      "location": "devops-pipeline-artifacts-762823830088"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "SourceAction",
            "actionTypeId": {
              "category": "Source",
              "owner": "AWS",
              "provider": "S3",
              "version": "1"
            },
            "configuration": {
              "S3Bucket": "devops-pipeline-source-762823830088",
              "S3ObjectKey": "source.zip",
